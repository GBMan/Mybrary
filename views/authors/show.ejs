<h2 class="page-header"><%= author.name %></h2>

<a href="/authors/<%= author.id%>/edit">Edit</a>
<%- include('../partials/_delete', { url: `/authors/${author.id}`}) %>
<% if (booksByAuthor.length > 0) { %>
    <h2>Books</h2>
    <% booksByAuthor.forEach((book) => { %>
        <a href="/books/<%= book.id%>">
            <img src="<%= book.coverImagePath %>" height="150" width="100" alt="<%= book.title %>" />
        </a>
    <% }) %>
<% } %>